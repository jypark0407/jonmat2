@import '~nib/index.styl'
@import '~jeet/stylus/jeet/index.styl'

global-reset()

.header
  height 60px
  border-bottom 1px solid #47525E
  img
    height 60px

.congress-member-detail
  .info
    border 1px solid gray
    width 400px
    margin 0 auto
    .name
      font-size 20px
      font-weight bold
    .photo
      display block
      width 300px
      height 200px
      border 1px solid black

  .related-restaurants
    background-color #E2E9EF
    .restaurant
        border 1px solid gray
        margin-right 10px
        float left
        width 200px
        height 300px
        a
          display block
          width 100%
          height 100%
